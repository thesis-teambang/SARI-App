<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LumpiangPrito">
    <TextView
        android:id="@+id/lPrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LUMPIANG PRITO"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:id="@+id/lPritoIng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGREDIENTS"
        android:layout_below="@+id/lPrito"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/alPritoIngr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1/4 kilo sotanghon, 1/2 kilo crab meat, 1/2 kilo fined chopped shrimp, 2 eggs, 1 onion, 1 huge singkamas(fined chopped), 1 garlic grain, salt, pepper, lumpia wrapper"
        android:paddingTop="10dp"
        android:layout_below="@+id/lPritoIng"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:onClick="productList"
        android:layout_below="@+id/alPritoIngr"
        android:text="ADD TO CART"/>

</RelativeLayout>